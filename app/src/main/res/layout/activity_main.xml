<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter IDs for 5 Opponent Pokemon"
            android:textSize="20sp"
            android:paddingBottom="8dp"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <!-- Pokemon ID Inputs -->
            <EditText
                android:id="@+id/pokemonId1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pokemon ID 1"
                android:inputType="number"
                android:drawableStart="@drawable/ic_pokemon_icon"
                android:paddingStart="12dp"
                android:background="@drawable/input_background"
                android:padding="12dp" />

            <EditText
                android:id="@+id/pokemonId2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pokemon ID 2"
                android:inputType="number"
                android:drawableStart="@drawable/ic_pokemon_icon"
                android:paddingStart="12dp"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/pokemonId3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pokemon ID 3"
                android:inputType="number"
                android:drawableStart="@drawable/ic_pokemon_icon"
                android:paddingStart="12dp"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/pokemonId4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pokemon ID 4"
                android:inputType="number"
                android:drawableStart="@drawable/ic_pokemon_icon"
                android:paddingStart="12dp"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/pokemonId5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pokemon ID 5"
                android:inputType="number"
                android:drawableStart="@drawable/ic_pokemon_icon"
                android:paddingStart="12dp"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/selectPokemonButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Pokemon"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pokemonList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/optimalPartyResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Optimal Party Results:"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/optimalPartyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="(Results will be displayed here)"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
